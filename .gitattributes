# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text diff=python

# Documentation
*.md text diff=markdown
*.txt text
*.rst text

# Configuration files
*.yml text
*.yaml text
*.json text
*.toml text
*.ini text
*.cfg text

# Docker files
Dockerfile text
docker-compose.yml text

# Requirements files
requirements*.txt text

# Scripts
*.sh text eol=lf
*.bat text eol=crlf

# Graphics
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg text

# Archives
*.zip binary
*.tar.gz binary
*.rar binary

# Logs
*.log text

# Data files
*.csv text
*.tsv text
*.json text

# Exclude from export
.gitattributes export-ignore
.gitignore export-ignore
.github export-ignore 